<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="274dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/setting_background"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/linearLayout_boot_completed_start"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_item_height"
            android:background="@drawable/setting_item_bg_selector"
            android:paddingLeft="@dimen/setting_left_and_right_padding"
            android:paddingRight="@dimen/setting_left_and_right_padding" >

            <LinearLayout
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/eyes_popupview_icon_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="返回"
                    android:textColor="@color/setting_item_word_color"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="关于"
                android:textColor="@color/setting_item_word_color"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/setting_left_and_right_padding"
            android:layout_marginRight="@dimen/setting_left_and_right_padding"
            android:background="@color/setting_item_line_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/setting_item_height"
            android:layout_gravity="center"
            android:background="@drawable/setting_item_bg_selector"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/setting_left_and_right_padding"
            android:paddingRight="@dimen/setting_left_and_right_padding"
            android:paddingTop="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:text="护眼精灵"
                android:textColor="#FFF"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_item_height"
            android:background="@drawable/setting_item_bg_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/setting_left_and_right_padding"
            android:paddingRight="@dimen/setting_left_and_right_padding" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="制作者:"
                android:textColor="@color/setting_item_word_color"
                android:textSize="@dimen/setting_item_word_size" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/author" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_item_height"
            android:background="@drawable/setting_item_bg_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/setting_left_and_right_padding"
            android:paddingRight="@dimen/setting_left_and_right_padding" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="联系QQ:"
                android:textColor="@color/setting_item_word_color"
                android:textSize="@dimen/setting_item_word_size" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/qq_nubber" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="15dp"
            android:text="Copyright©2015 | 护眼精灵V1.0"
            android:textColor="#FFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="All Rights Reserved"
            android:textColor="#FFF" />
    </LinearLayout>

</RelativeLayout>