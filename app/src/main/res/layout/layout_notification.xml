<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_main"
    android:layout_width="fill_parent"
    android:layout_height="64.0dip"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/small_space"
        android:contentDescription="@null"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/setting_notification_icon_right_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/setting_notification_title_word_color"
            android:textSize="@dimen/setting_notification_title_word_size" />

        <TextView
            android:id="@+id/textvView_click_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/setting_notification_prompt_word_color"
            android:textSize="@dimen/setting_notification_prompt_word_size" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_set"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/small_space"
        android:background="@drawable/notification_btn_set_selector"
        android:contentDescription="@null"
        android:scaleType="fitCenter" />

</LinearLayout>